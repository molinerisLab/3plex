NCPUS=28
REFERENCE_ROOT=os.environ.get("REFERENCE_ROOT")
CONDA_ACTIVATE="set +u; source %s/miniconda3/etc/profile.d/conda.sh ; conda activate ; conda activate" % REFERENCE_ROOT
TRIPLEXATOR_SCORE_CUTOFF=10
TRIPLEXATOR_PARAM="-L -1 -l {} -e 20 -E 1".format(TRIPLEXATOR_SCORE_CUTOFF)

#DATASETS=["AC004930.1", "AC005006.1", "AC005520.5", "AC005884.2", "AC006064.5", "AC008569.1", "AC008641.1", "AC009248.2", "AC009264.1", "AC009276.1", "AC011131.1", "AC011474.3", "AC011998.3", "AC012409.4", "AC012574.1", "AC016553.1", "AC019294.2", "AC021752.1", "AC025254.1", "AC063919.1", "AC067747.1", "AC068544.2", "AC068580.1", "AC074131.1", "AC078962.4", "AC087442.1", "AC087477.2", "AC089999.1", "AC091180.4", "AC092296.2", "AC092296.4", "AC092567.1", "AC092807.1", "AC097376.3", "AC104971.3", "AC112491.1", "AC114316.1", "AC120498.2", "AC131274.1", "AC138627.1", "AC139099.1", "AC139426.2", "AC234771.1", "AC243829.5", "AF165147.1", "AL160262.1", "AL353600.1", "AL357315.1", "AL365258.1", "AL451081.1", "AL591368.1", "AL592182.1", "AP000704.1", "AP005263.1", "AP005436.2", "C1RL-AS1", "CLCA4-AS1", "DNAJC27-AS1", "DNM3OS", "EMX2OS", "EPHA1-AS1", "FAM41C", "FAM87A", "GTSE1-DT", "LACTB2-AS1", "LEF1-AS1", "LINC00467", "LINC00877", "LINC01483", "LINC01829", "LINC02041", "LINC02389", "LINC02453", "LINC02762", "MAP3K20-AS1", "MEG3", "MIR22HG", "MZF1-AS1", "NEAT1", "OTX2-AS1", "SATB2-AS1", "SGMS1-AS1", "SMIM2-AS1", "TAB3-AS1", "TMEM132D-AS1", "TMEM99", "VLDLR-AS1", "ZMYND10-AS1"]


def get_all_triplexator_expressed_input(wildcards):
	import gzip
	count=0
	with open("longest_transcripts.id") as fh_id:
		valid_ids = [id.strip() for id in list(fh_id)]
		with gzip.open("../../local/share/data/GEP.count.exp_filter.ltmm.metadata.max_exp_in_condition.biotype.len.gz", mode='rt') as fh:
			for line in fh:
				tokens = line.split("\t")
				if tokens[3] in valid_ids:
					if tokens[4]=="protein_coding":
						continue
					count+=1
					#if(count>1000):
					#	return
					yield "{}-ccREs.bed.tpx.gz".format(tokens[3])

def get_all_triplexator_selected_input(wildcards):
	with open("../../local/share/data/selected_lncRNA.ENCODE_NPC_H9", mode='rt') as fh:
		for line in fh:
			yield "{}-ccREs.bed.tpx.gz".format(line.rstrip())


rule get_fasta:
	input:
		"longest_transcripts.fa"
	output:
		"{GeneID}.fa"
	container:
        	"../../local/share/images/bit.wip-rnaseq.0.4.img"
	threads: 1
	shell: """
		get_fasta -i {wildcards.GeneID} < {input} > {output}
		"""
		

#	docker run -u `id -u`:$(DOCKER_GROUP) --rm -v $(DOCKER_DATA_DIR):$(DOCKER_DATA_DIR) -v $(SCRATCH):$(SCRATCH) triplexator:v0.02 bash -c "cd $(PWD); triplexator $(TRIPLEXATOR_PARAM) -fm 0 -of 0     -o $@ -rm 2 -p $(CORES) -ss $< -ds $^2" 
#	bawk '$$Score>=$(TRIPLEXATOR_SCORE_CUTOFF)' $@ >$@.tmp
rule triplexator:
    input:
        ssRNA="{ssRNA}.fa",
	DNA="{DNA}.fa"
    output:
        "{ssRNA}-{DNA}.tpx.gz"
    container:
        "../../local/share/images/triplexator_v1.3.2.img"
    threads: NCPUS
    shell: """
        triplexator {TRIPLEXATOR_PARAM} -fm 0 -of 0 -o {output}.tmp -rm 2 -p {threads} -ss {input.ssRNA} -ds {input.DNA} || echo "exited with error";
	awk '$7>={TRIPLEXATOR_SCORE_CUTOFF}' {output}.tmp | gzip > {output}; rm {output}.tmp
	cat {output}.tmp.summary | gzip > {output}.summary.gz; rm {output}.tmp.summary
	mv {output}.tmp.log triplexator_log/{output}.log; rm {output}.tmp.log
	"""

rule all_triplexator:
	input:
		get_all_triplexator_selected_input

rule all_triplexator_expressed:
	input:
		get_all_triplexator_expressed_input
